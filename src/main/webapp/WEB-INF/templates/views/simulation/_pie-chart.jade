-@ val selectId: Int
-@ val groupNames: Seq[String]

.row
  .epoch(id="pie-chart-#{selectId}" style="width: 170px; height: 170px")

.row
  .col-md-3
    label Grupo:

  .col-md-6
    select.pie-chart-select.form-control(group-select-id="#{selectId}")
      - for(groupName <- ("Todos" +: groupNames))
        option= groupName
